<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= link_to 'Edit', edit_tournament_player_path(tournament_id: @tournament.id, id: player.id) %></td>
        <td><%= link_to 'Destroy', tournament_player_path(tournament_id: @tournament.id, id: player.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_tournament_player_path(params[:tournament_id]) %>
